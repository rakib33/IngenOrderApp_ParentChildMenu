
<script src="~/Scripts/IngenScripts/customer_js.js"></script>

<div class="row">
    <div class="col-md-6 pull-left margin-top-0">        
     <h3>Manage Customers</h3>
    </div>

    <div class="col-md-6 margin-top-0">
        <button class="btn btn-sm btn-success col-xs-2 pull-right margin-top-10 btn-add" data-toggle="modal" data-target="#CustomerModal">
            <small><span class="glyphicon glyphicon-plus pull-left"></span></small> Add New
        </button>
    </div>
</div>

<hr />

<div class="row margin-buttom-20 margin-top-15">
    <div class="col-md-6 pull-left">

        <div class="btn-group" role="group" aria-label="Justified button group">

            <button id="All" type="button" class="btn action-btn ">All</button>
            <button id="Active" type="button" class="btn action-btn">Active</button>
            <button id="Closed" type="button" class="btn action-btn">Closed</button>

        </div>

    </div>
    <div class="col-md-6">
        <div class="dropdown pull-right">
            <button class="btn batch-action dropdown-toggle pull-right" type="button" data-toggle="dropdown">
                Batch Actions
                <span class="caret"></span>
            </button>
            <ul class="dropdown-menu">
                <li><a class="active" href="#">Link1</a></li>
                <li><a class="active" href="#">Link2</a></li>
                <li><a class="active" href="#">Link3</a></li>
            </ul>
        </div>
    </div>
</div>


<table id="example" class="table table-striped margin-top-10" cellspacing="0" width="100%">
    @*table-bordered *@
    <thead>
        <tr>
            <td></td>
            <th>Code</th>
            <th>Country</th>
            <th>Contact Person</th>
            <th>Contact Number</th>
            <th>Last Ordered</th>
            <th>Email</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
</table>

<div id="CustomerModal" class="modal fade" role="dialog" data-backdrop="static" data-keyboard="false"> @*data-backdrop="static" data-keyboard="false" used prevent to disapper model by outside click*@
    <div class="modal-dialog modal-dialog-Customer">

        <!-- Modal content-->
        <div class="modal-content modal-customer">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Customer Add Form</h4>
            </div>
            <div class="modal-body">
                @Html.Partial("Contact")
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default Del" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>


<div id="CustomerDeleteModal" class="modal fade" role="dialog" data-backdrop="static" data-keyboard="false">
    @*data-backdrop="static" data-keyboard="false" used prevent to disapper model by outside click*@
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Customer Delete Form</h4>
            </div>
            <div class="modal-body">
                @Html.Partial("delete")
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default Del" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>


